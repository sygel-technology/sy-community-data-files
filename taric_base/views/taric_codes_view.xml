<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="taric_codes_tree">
            <field name="name">taric.codes.tree</field>
            <field name="model">taric.codes</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="start_date" optional="hide"/>
                    <field name="end_date" optional="hide"/>
                    <field name="hierarchial"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="taric_codes_form">
            <field name="name">taric.codes.form</field>
            <field name="model">taric.codes</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="hierarchial"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="taric_codes_search">
            <field name="name">taric.codes.search</field>
            <field name="model">taric.codes</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="hierarchial"/>
                    <filter string="Start date" name="filter_start_date" date="start_date"/>
                    <filter string="End date" name="filter_end_date" date="end_date"/>
                    <group>
                        <filter name="hierarchial" string="Hierarchial" context="{'group_by':'hierarchial'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="taric_codes_action">
            <field name="name">Taric codes</field>
            <field name="res_model">taric.codes</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id="menuitem_taric_codes" 
            name="Taric codes" 
            parent="contacts.res_partner_menu_config" 

            action="taric_codes_action" 
        />

    </data>
</odoo>